<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_go_theater"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="영화관"
        app:layout_constraintEnd_toStartOf="@id/btn_go_auction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_go_auction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="경매장"
        app:layout_constraintEnd_toStartOf="@id/btn_go_profile"
        app:layout_constraintStart_toEndOf="@id/btn_go_theater"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_go_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="프로필"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_go_auction"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_go_theater" />
</androidx.constraintlayout.widget.ConstraintLayout>